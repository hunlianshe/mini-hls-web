.xlcsDetailPage {
  position: absolute;
  width: 100%;
  height: 100%;
}

.xlcsDetailPage .block {
 margin: 20rpx 100rpx;
 text-align: center;
}

.xlcsDetailPage .question {
  background: #ffffff;
  border-radius: 8rpx;
  height: 340rpx;
  margin: 60rpx 60rpx 80rpx 60rpx;
  text-align: center;
  justify-content: center;
  padding: 30rpx;
  font-size: 32rpx;
}

.xlcsDetailPage .question-title {
  padding: 20rpx 0 40rpx 0;
  justify-content: center;
}

.xlcsDetailPage .question-title view {
  color: #E39BF0;
  padding: 0 10rpx;
}

.xlcsDetailPage .page {
  position: absolute;
  top: 380rpx;
  right: 80rpx;
  font-size: 28rpx;
}

.xlcsDetailPage .options {
  width: 100%;
  margin: 40rpx 0;
  margin-left: auto;
  margin-right: auto;
  background: #ffffff;
  font-size: 32rpx;
}

.xlcsDetailPage .options.active {
  background: #E39BF0;
  color: #ffffff;
  border: none;
}

