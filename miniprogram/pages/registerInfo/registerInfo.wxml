<view>
  <page-container>
    <view class="registerInfo">
      <view class="subtitle">
        匹配信息
      </view>
      <form bindsubmit="submit" bindreset="formReset">
        <view class='info-cell'>
          <text>年龄</text>
          <input type="digit" class="align-right" name="age" value="{{age}}" 
            maxlength="10" placeholder="请填写年龄" placeholder-class="placeholder"/>
          <view class='pleft_5'>岁</view>
        </view>

        <view class='info-cell'>
          <text>身高</text>
          <input type="digit" class="align-right" name="height" value="{{height}}" 
            maxlength="10" placeholder="请填写身高" placeholder-class="placeholder"/>
          <view class='pleft_5'>cm</view>
        </view>

        <view class='info-cell'>
          <text>收入</text>
          <input type="digit" class="align-right" name="salary" value="{{salary}}" 
            maxlength="10" placeholder="请填写收入" placeholder-class="placeholder"/>
          <view class='pleft_5'>万</view>
        </view>

        <view class="footer-container">
          <button class="common-btn" type="submit">下一步</button>
        </view>
      </form>
    </view>
  </page-container>
</view>
