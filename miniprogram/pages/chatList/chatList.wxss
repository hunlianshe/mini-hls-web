.chatList {
  position: fixed;
  height: 100%;
  width: 100%;
  background: #F8F9FA;
  color: #4A4A4A;
}

.chatList image {
  width: 100%;
  height: 120rpx;
}

.chatList .item-cell {
  display: flex;
  align-items: center;
  border-bottom: 2px solid #efefef;
  color: #030303;
  font-size: 32rpx;
  padding: 32rpx;
}

.chatList .head image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 100rpx;
}

.chatList .messge {
  width: 70%;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  font-size: 28rpx;
  color: #9092A5;
}

.no-data {
  padding: 100rpx;
  color: #9092A5;
  text-align: center;
  font-size: 28rpx;
}