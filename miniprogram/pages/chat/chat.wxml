
<view>
  <user-info-card userInfo="{{toUser}}" />
  <view style="padding: 32rpx;">
    <block wx:for="{{messageList}}">
      <view wx:if="{{item.date !== ''}}" class="chatDate">{{item.date}}</view>
      <message-item messageItem="{{item}}" toUser="{{toUser}}"  me="{{me}}" isRight="{{item.from == toUser.openid}}"/>
    </block>
  </view>
  <view style="position: fixed; bottom: 0; width: 100%;">
    <send-message bind:sendTap="sendTap" bind:inputTap="inputTap" bind:uploadImage="uploadImage"  />
  </view>
</view>
