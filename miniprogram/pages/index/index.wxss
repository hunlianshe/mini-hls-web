
.loadingPage {
  position: fixed;
  width: 100%;
  height: 100%;
  margin-top: 100rpx;
  color: #4A4A4A;
  font-size: 28rpx;
}

.loadingPage .cover-page {
  position: fixed;
  width: 100%;
  height: 100%;
  background: radial-gradient(#15023660, #601665);
  top: 0;
  opacity: 0.9;
}

.loadingPage .cover-page .text {
  font-size: 40rpx;
  color: #ffffff;
  padding: 100rpx 0;
}

.loadingPage .begin {
  display: flex;
  align-items: center;
  justify-content: center;
}

.loadingPage image {
  width: 100px;
  padding-right: 30px;
}

.loadingPage button{ 
  background:none;
  color:#ffffff;
  margin: 0;
}

.loadingPage button::after{ 
  border: none; 
}
