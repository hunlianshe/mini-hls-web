.myHome .marginTop_10 {
  margin-top: 20rpx;
}

.myHome .number {
  color: #E39BF0;
  font-size: 42rpx;
  padding: 10rpx;  
}

.myHome .info-percent {
  margin: 30rpx;
  font-size: 28rpx;
  color: #333333;
}

.myHome .info-percent .number {
  font-size: 32rpx;
  color: #BD10E0;
  padding: 0 30rpx;
}
