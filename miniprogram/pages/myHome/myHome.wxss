
.myHome {
  position: fixed;
  height: 100%;
  width: 100%;
  background: #F8F9FA;
  color: #4A4A4A;
}

.myHome .home-head {
  padding: 30rpx;
  color: #ffffff;
  background-color: #E39BF0;
  height: 224rpx;
}

.myHome .head-img {
  width: 120rpx;
  height: 120rpx;
  margin-right: 30rpx;
  border-radius: 100px;
  border: 3px solid #ffffff;
}

.myHome .home-center {
  align-items: center;
  justify-content: space-around;
  padding: 30rpx 0;
  background-color: #ffffff;
  text-align: center;
  border-top: 1rpx solid #f5f5f5;
}

.myHome .small-text {
  padding: 4rpx;
  font-size: 30rpx;
  color: #4A4A4A;
  padding-left: 20rpx;
}

.myHome .fate-text {
  font-size: 24rpx;
  color: #92949A;
}

.myHome .home-cell {
  margin-top: 20rpx;
  padding: 20rpx 30rpx;
  background-color: #ffffff;
}

.myHome .home-cell-list {
  padding: 32rpx 0rpx;
  background-color: #ffffff;
  border-bottom: 1rpx solid #f5f5f5;
}

.myHome .number {
  font-size: 40rpx;
  color: #262628;
  padding: 10rpx;  
}

.myHome .vip-cell {
  margin: 32rpx 0;
  display: flex;
  align-items: center;
  background-size: 100%;
  background-repeat: no-repeat;
  height: 120rpx;
  padding: 0rpx 32rpx;
  color: #A46846;
  font-size: 24rpx;
}

.myHome .vip-cell button {
  height: 48rpx;
  line-height: 48rpx;
  border-radius: 24rpx;
  font-size: 24rpx;
  margin-left: 20rpx;
}

.myHome .vip-cell button::after{ 
  border: none; 
}

.myHome .vip-cell image {
  width: 100%;
  height: 120rpx;
}
