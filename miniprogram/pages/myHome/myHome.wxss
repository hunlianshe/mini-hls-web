
.myHome {
  position: fixed;
  height: 100%;
  width: 100%;
  background: #F8F9FA;
  color: #4A4A4A;
}

.myHome .home-head {
  padding: 30rpx;
  color: #ffffff;
  background-color: #E39BF0;
  height: 224rpx;
}

.myHome .head-img {
  width: 120rpx;
  height: 120rpx;
  margin-right: 30rpx;
  border-radius: 100px;
  border: 3px solid #ffffff;
}

.myHome .home-center {
  align-items: center;
  justify-content: space-around;
  padding: 30rpx 0;
  background-color: #ffffff;
  text-align: center;
  border-top: 1rpx solid #f5f5f5;
}

.myHome .small-text {
  padding: 4rpx;
  font-size: 30rpx;
  color: #4A4A4A;
  padding-left: 20rpx;
}

.myHome .home-cell {
  margin-top: 20rpx;
  padding: 20rpx 30rpx;
  background-color: #ffffff;
}

.myHome .home-cell-list {
  padding: 32rpx 0rpx;
  background-color: #ffffff;
  border-bottom: 1rpx solid #f5f5f5;
}

.myHome .number {
  color: #E39BF0;
  font-size: 42rpx;
  padding: 10rpx;  
}

.myHome .info-percent {
  margin: 30rpx;
  font-size: 28rpx;
  color: #333333;
}

.myHome .info-percent .number {
  font-size: 32rpx;
  color: #BD10E0;
  padding: 0 30rpx;
}

.myHome .vip-cell {
  margin: 32rpx 0;
}

.myHome .vip-cell image {
  width: 100%;
  height: 120rpx;
}
