
.myHome {
  background: #fbf9fc;
}

.myHome .home-head {
  padding: 30rpx;
  color: #ffffff;
  background-color: #E39BF0;
}

.myHome .home-head .head-img {
  width: 120rpx;
  height: 120rpx;
  margin-right: 30rpx;
  border-radius: 100px;
  border: 3px solid #ffffff;
}

.myHome .home-center {
  align-items: center;
  justify-content: space-around;
  padding: 30rpx 0;
  background-color: #ffffff;
  text-align: center;
}

.myHome .small-text {
  padding: 4rpx;
  font-size: 32rpx;
  color: #4A4A4A;
  padding-left: 5px;
}

.myHome .home-cell {
  margin-top: 20rpx;
  padding: 20rpx 30rpx;
  background-color: #ffffff;
}

.myHome .home-cell-list {
  padding: 20rpx 0rpx;
  background-color: #ffffff;
  border-bottom: 1rpx solid #efefef;
}

