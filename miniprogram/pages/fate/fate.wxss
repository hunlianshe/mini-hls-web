.fate-page {
  background: #fbf9fc;
  padding-top: 20rpx;
}

.fate-page .match {
  position: fixed;
  right: 30rpx;
  bottom: 60rpx;
  width: 65rpx;
  height: 65rpx;
  border-radius: 100rpx;
  padding: 20rpx;
  text-align: center;
  color: #ffffff;
  font-size: 22rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(to top, #E39BF0, rgba(227, 155, 240, 0.774))
}

.user-box {
  width: 48%;
  font-size: 14px;
  color: #797979;  
  display: inline-block;
  background-color: #ffffff;
  border-radius: 4px;
  margin: 0px 1%;
  margin-bottom:20px;
  border-radius: 8rpx 8rpx 0 0;
  background: #ffffff;
  color: #333333;
}

.user-box image {
  width: 100%;
  margin-bottom: 5px;
  background: #000000;
  height: 240rpx;
  border-radius: 8rpx 8rpx 0 0;
}

.user-box .label {
  border: 1px solid #E39BF0;
  border-radius: 40rpx;
  font-size: 22rpx;
  padding: 6rpx 10rpx;
}

.user-box .info {
  color: #999999;
  font-size: 28rpx;
  padding-top: 10rpx;
}