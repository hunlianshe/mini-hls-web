.fate-page {
  background: #fbf9fc;
  padding: 20rpx;
}

.fate-page .match {
  position: fixed;
  top: 0;
  width: 100%;
  padding: 20rpx 0;
  background: #ffffff;
}

.fate-page .match .match-content {
  line-height: 80rpx;
  text-align: center;
  color: #E39BF0;
  font-size: 34rpx;
  background: #fff;
  border-radius: 10rpx;
  border: 2rpx solid #E39BF0;
  margin: 0 40rpx;
}

.user-box {
  width: 44%;
  font-size: 14px;
  color: #797979;  
  display: inline-block;
  background-color: #ffffff;
  margin: 0px 1%;
  margin-bottom: 20px;
  padding: 2%;
  border-radius: 8rpx 8rpx 0 0;
  background: #ffffff;
  color: #333333;
}

.user-box image {
  width: 100%;
  margin-bottom: 5px;
  background: #000000;
  height: 400rpx;
  border-radius: 8rpx 8rpx 0 0;
}

.user-box .label {
  border: 1px solid #E39BF0;
  border-radius: 40rpx;
  font-size: 22rpx;
  padding: 6rpx 10rpx;
}

.user-box .info {
  color: #999999;
  font-size: 28rpx;
  padding-top: 10rpx;
}