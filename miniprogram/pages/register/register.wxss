/* pages/createCar/createCar.wxss */
@import "../../lib/weui.wxss";

.registerPage {

}
.registerPage .subtitle {
  padding: 5px 10px;
  font-size: 12px;
  color: #9B9B9B;
}

.registerPage .info-box {
  margin-bottom: 15px;
  padding: 0px 15px; 
  font-size: 16px;
  color: #4A4A4A;
  background: #ffffff;
}

.registerPage .info-cell{
  padding: 10px 0px; 
}

.registerPage .info-cell text{
  padding-right:20rpx;
  color:#556677;
}

.registerPage input {
  flex: 1;
  padding-left: 10px;
}

.registerPage .placeholder {
  text-align: right;
  color: #9B9B9B;
  z-index: 0;
}

.registerPage icon {
  padding-left: 5px;
}

.registerPage .pleft_5 {
  padding-left: 5px;
}

.registerPage .weui-uploader{
  /* flex: 1; */
  padding-top:5px;
}

.registerPage button {
  margin: 30px 15px;
  border-radius: 0px;
  color: #ffffff;
  background: #E39BF0;
}

.registerPage .align-right {
  text-align: right;
}

.registerPage .icon-del {
  position: absolute;
  margin-top:-8px;
  margin-left:-12px;
}

.registerPage textarea {
  height: 50px;
  flex: 1;
  padding: 10px;
  background: #edf2f6;
  z-index: 0;
  min-height:60px;
}

.registerPage .words {
  float:right;
  line-height:12px;
  margin-top:-35px;
  margin-right:4px;
  padding:2px 5px;
  text-align:center;
  background:#C1C9CF;
  border-radius:20px;
  font-size:10px;
  opacity:0.8;
  color:#ffffff !important;
  z-index:0;
}