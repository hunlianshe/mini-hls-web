
.xzysPage .title {
  margin: 30rpx;
}

.xzysPage .constellation {
  padding: 10rpx 0;
  border: 1px solid #efefef;
  margin: 40rpx 30rpx;
  box-shadow: 0 4rpx 8rpx #00000050;
  border-radius: 30rpx;
}

.xzysPage .constellation .block {
  width: 25%;
  display: inline-block;
  text-align: center;
}

.xzysPage .constellation .block image {
  width: 90rpx;
  height: 90rpx;
  display: block;
  margin: auto;
  padding: 10rpx 0;
}

.xzysPage .constellation .block .name {
  font-size: 14px;
  color: #3e3d3d;
}

.xzysPage .card {
  display: flex;
  align-items: center;
  border-radius: 30rpx;
  height: 200rpx;
  margin-top: 30rpx;
  color: #ffffff;
  padding-left: 30rpx;
}

.xzysPage .card image {
  position: absolute;
  height: 200rpx;
  width: calc(100% - 60rpx);
  border-radius: 30rpx;
}

.xzysPage .card .text {
  position: absolute;
  z-index: 1;
  padding-left: 30rpx;
}