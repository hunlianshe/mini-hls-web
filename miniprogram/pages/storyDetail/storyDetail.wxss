
.storyDetail {
  background: #ffffff;
  position: absolute;
  width: 100%;
  height: 100%;
  font-size: 28rpx;
  color: #3E3D3D;
}

.storyDetail .top {
  height: 350rpx;
  text-align: center;
  color: #ffffff;
  font-size: 32rpx;
}

.storyDetail .top picker {
  width: 160rpx;
  color: #666666;
  font-size: 28rpx;
  border-radius: 50rpx;
  padding: 5rpx 10rpx;
  line-height: 50rpx;
  margin-top: 40rpx;
  margin-left: auto;
  margin-right: auto;
  background: #ffffff;
  border: 1rpx solid #E39BF0;
}

.storyDetail .top .picker {
  text-align: center;
  color: #333333;
}

.storyDetail .top .picker-place {
  color: #D8D8D8;
  text-align: center;
}

.storyDetail .title {
  padding: 30rpx 0;
  font-size: 30rpx;
  text-align: center;
  font-weight: 600;
}

.storyDetail .outline {
  margin: 0 50rpx;
  padding-bottom: 200rpx;
  margin-top: -120rpx;
}

.storyDetail .outline image {
  width: 100rpx;
  height: 100rpx;
  padding-right: 30rpx;
}

.storyDetail .outline .detail {
  line-height: 50rpx;
}

.storyDetail .footer {
  position: fixed;
  bottom: 40rpx;
  display: flex;
  width: 100%;
}

.storyDetail .footer button {
  line-height: 70rpx;
  font-size: 32rpx;
  border-radius: 10rpx;
  width: 360rpx;
}