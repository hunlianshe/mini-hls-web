/* components/userInfoCard.wxss */
.userInfoCard {
  display: flex;
  box-shadow: #00000050 0 4rpx 8rpx;
  padding: 20rpx 32rpx;
  border-top-color: #efefef;
  border-top-style: solid;
  border-top-width: 2rpx;
  z-index: 999;
  position: fixed;
  width: 100%;
  background: #fff;
}
.userInfoCard .avatarUrl image {
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
}

