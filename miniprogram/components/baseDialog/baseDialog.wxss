.baseDialog {
  background: #00000050;
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 300;
}

.baseDialog .dialog-content {
  text-align: center;
  background: #fff;
  width: 60%;
  padding: 60rpx 60rpx 30rpx 60rpx;
  border-radius: 24rpx;
  opacity: 1;
}

.baseDialog .ensure-btn {
  background: #FB5572;
  color: #ffffff;
  font-size: 32rpx;
  line-height: 90rpx;
  border-radius: 45rpx;
  margin-top: 60rpx;
  margin-bottom: 20rpx;
}
.baseDialog .cancel-btn {
  color: #979899;
  font-size: 32rpx;
  background: #fff;
}

.baseDialog .cancel-btn::after {
  border: none;
}