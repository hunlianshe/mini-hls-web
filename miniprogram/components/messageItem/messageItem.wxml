
 
 
<view class="{{isRight === true ? 'messageConent right' : 'messageConent'}}">
  <view class="messageItem">
    <view wx:if="{{isRight !== true}}" class="avatarUrl">
      <image src="{{toUser.avatarUrl}}" mode="aspectFit"/>
    </view>
    
    <view class="message">
      <view style="font-size: 28rpx;">{{messageItem.msg}}</view>
      <view class="message-time">{{messageItem.time}}</view>
    </view>
    <view wx:if="{{isRight === true}}" class="avatarUrl">
      <image src="{{me.avatarUrl}}" mode="aspectFit" />
    </view>
  </view>
</view>
