<!--components/carCard/carCard.wxml-->
<view class='shopCar'>
  <block wx:if='{{carDetail.status === 0}}'>
    <view class="icon-soldout">
      <Icon iconName='soldout' width='30px' height='25px'/>
    </view>
  </block>
  <view>
    <!-- <view class='shopCar-price'>{{carDetail.price}}万</view> -->
    <image src="{{carDetail.indexImage}}" mode='aspectFill'></image>
  </view>
  <view class='shopCar-price'>{{carDetail.price}}万</view>
  <view class='shopCar-info'>
    <view class='brand'>{{carDetail.brand}}</view>
    <view class='small-text'>{{year}}/{{carDetail.kilometer}}万公里</view>
  </view>
</view>
