/* components/wechatDialog/wechatDialog.wxss */

.wechatPage {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  background: rgba(49,41,41,0.85);
  z-index: 99;
  align-items:center;
  display:flex;
}

.wechatPage .wechatPage-dialog {
  background: #ffffff;
  padding: 20rpx 40rpx;
  width: 100%;
  margin-left: 80rpx;
  margin-right: 80rpx;
}

.wechatPage .xImg {
  position: absolute;
  right:40rpx;
  margin-top:-60rpx;
}

.wechatPage .wechat-img {
  padding-bottom:40rpx;
  padding-top:40rpx;
}

.wechatPage .wechat-phone {
  text-align: center;
  padding: 60rpx 0 80rpx 0;
  font-size: 30rpx;
}

.wechatPage .copy {
  font-size: 26rpx;
  color: #999999;
  padding: 6rpx 20rpx;
  margin-left: 30rpx;
  border: 1px solid #efefef;
  border-radius: 18rpx;
}

.wechatPage .wechat-img image {
  width: 100%;
}

.wechatPage button {
  background: #6BC6FD;
  border: none;
  font-size: 32rpx;
  color: #ffffff;
}

.wechatPage .button-hover {
  background: rgb(88, 161, 206);
}

.wechatPage .tips {
  color: #9B9B9B;
  font-size: 24rpx;
  padding: 20px 0px;
}