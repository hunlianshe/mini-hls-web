
.recharge {
  margin: 60rpx;
}

.recharge form {
  margin: 30rpx;
}

.recharge .user-info {
  text-align: center;
}

.recharge .user-info image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 140rpx;
  margin: 50rpx 0;
}

.recharge .user-info .name {
  font-size: 44rpx;
  font-weight: 600;
}

.recharge .form-cell {
  margin: 40rpx 0;
  align-items: flex-end !important;
}

.recharge .form-cell input {
  border-bottom: 1px solid #dedede;
  width: 100%;
  padding-bottom: 10rpx;
}

.recharge .form-cell button {
  color: #ffffff;
  font-size: 28rpx;
  background: #E39BF0;
  min-width: 210rpx;
  margin-left: 20rpx;
}

.recharge .form-cell button::after{ 
  border: none; 
}
